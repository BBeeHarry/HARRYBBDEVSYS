<div class="modal fade" id="confirmBackDiv" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5 class="modal-title true-confirm-text">
                    <i class="glyphicon glyphicon-question-sign"></i>
                    <span class="true-confirm-text" id="confirmBackHeaderMessage">@BBDEVSYS.Content.text.ResourceText.PopupConfirmBackHeader</span>
                </h5>
            </div>
            <div class="modal-body true-confirm-text">
                <p><span id="confirmBackBodyMessage">@BBDEVSYS.Content.text.ResourceText.PopupConfirmBackBody</span></p>
            </div>
            <div class="modal-footer">
                <button id="cancelBackPopupButton" type="button" class="btn btn-default authDisplay" onclick="closePopup('confirmBackDiv');"><span class="cust-confirm-text">@BBDEVSYS.Content.text.ResourceText.ButtonCancel</span></button>
                <button id="okBackPopupButton" type="button" class="btn btn-danger authDisplay" onclick="closePopup('confirmBackDiv');"><span class="cust-button-text">@BBDEVSYS.Content.text.ResourceText.ButtonConfirm</span></button>
            </div>
        </div>

        <input type="hidden" id="backPopupFormState" />
        <input type="hidden" id="backPopupBackUrl" />

    </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        //Clear action handler
        $('#confirmBackDiv').off('click', '.btn, .close');

        $("#confirmBackDiv").on('shown.bs.modal', function (event) {
            $('#confirmBackDiv button').focus();
        });

        $('#okBackPopupButton').click(function () {
            var formState = $('#backPopupFormState').val();
            var backUrl = $('#backPopupBackUrl').val();

            confirmGoBack(formState, backUrl);
        });

    });
</script>
